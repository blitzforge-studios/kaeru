{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "target": "ESNext",
        "moduleDetection": "force",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "include": ["src/**/*.ts"],
    "type": "module"
}
